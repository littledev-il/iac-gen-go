{
  "name": "iac-gen-go",
  "version": "1.0.0",
  "description": "IaC code generator tool using Claude Code SDK for CDKTF Go projects",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "synth": "npm run build && node dist/synth.js",
    "lint": "eslint src --ext .ts && npm run lint:generated",
    "lint:generated": "cd generated && gofmt -l . && go vet ./...",
    "deploy": "npm run build && node dist/deploy.js",
    "test": "jest",
    "clean": "rm -rf dist generated",
    "generate": "npm run build && node dist/index.js generate",
    "config:init": "npm run build && node dist/index.js config --init",
    "config:show": "npm run build && node dist/index.js config --show",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "node-ssh": "^13.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "keywords": [
    "iac",
    "infrastructure",
    "cdktf",
    "go",
    "claude",
    "code-generation"
  ],
  "author": "botcheddevil",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/botcheddevil/iac-gen-go.git"
  }
}